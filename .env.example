# ===========================================
# CPA Exam Blueprint - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!

# ===========================================
# Supabase Configuration
# ===========================================
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ===========================================
# API Keys
# ===========================================
# Anthropic API key for AI features (Navigator)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-...

# Resend API key for email notifications
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_...

# ===========================================
# Email Configuration
# ===========================================
# Email address to receive feedback/contact submissions
EMAIL_TO=your-email@example.com

# ===========================================
# Admin Configuration
# ===========================================
# Comma-separated list of admin email addresses
# Server-side (for API routes and server components)
ADMIN_EMAILS=admin@example.com,another-admin@example.com
# Client-side (for showing admin UI elements) - same value as ADMIN_EMAILS
NEXT_PUBLIC_ADMIN_EMAILS=admin@example.com,another-admin@example.com

# ===========================================
# Analytics Configuration
# ===========================================
# Google Analytics 4 Measurement ID
# Get from: Google Analytics > Admin > Data Streams > Your Stream > Measurement ID
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ===========================================
# Feature Flags
# ===========================================
# Set to "true" to enable beta period features
IS_BETA_PERIOD=false

# Set to "true" to log Navigator conversations for debugging
LOG_NAVIGATOR_CONVERSATIONS=false
